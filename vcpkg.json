{
	"$schema": "https://raw.githubusercontent.com/microsoft/vcpkg-tool/main/docs/vcpkg.schema.json",
	"name": "bored-game-engine",
	"description": "A simple game engine to build board games",
	"version": "1.0.0",
	"dependencies": [
		"glfw3",
		"glad",
		"glm",
		"assimp",
		"stb",
		{
			"name": "imgui",
      		"platform": "windows",
			"features":  ["docking-experimental", "glfw-binding", "opengl3-binding"]
		},
		"openal-soft",
		"audiofile",
		"entt"
	]
}
