{
  "version": 6,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 25,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "base",
      "binaryDir": "${sourceDir}/build/${presetName}",
      "installDir": "${sourceDir}/install/${presetName}",
      "generator": "Ninja",
      "toolchainFile": "${sourceDir}/vcpkg/scripts/buildsystems/vcpkg.cmake",
      "cacheVariables": {
        "VCPKG_FEATURE_FLAGS": "manifests",
        "CMAKE_C_COMPILER": "clang",
        "CMAKE_CXX_COMPILER": "clang++",
        "CMAKE_EXPORT_COMPILE_COMMANDS": true
      }
    },
    {
      "name": "debug",
      "inherits": "base",
      "cacheVariables": {
        "CMAKE_C_FLAGS": "-g",
        "CMAKE_CXX_FLAGS": "-g"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "build-base",
      "displayName": "Build with ninja",
      "configurePreset": "base",
      "hidden": true,
      "verbose": true
    },
    {
      "name": "build",
      "displayName": "Build everything executable with Ninja",
      "inherits": "build-base"
    },
    {
      "name": "build-main",
      "displayName": "Build main executable with Ninja",
      "inherits": "build-base",
      "targets": [
        "main"
      ]
    },
    {
      "name": "build-deb",
      "displayName": "Build with -g flag",
      "configurePreset": "debug",
      "targets": [
        "main"
      ]
    }
  ],
  "testPresets": [
    {
      "name": "test",
      "displayName": "Test everything with Ninja",
      "configurePreset": "base",
      "output": {
        "outputOnFailure": true
      },
      "execution": {
        "noTestsAction": "error",
        "stopOnFailure": true
      }
    }
  ]
}
